<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000">

    <TextView android:id="@+id/textView1" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:layout_marginTop="50dp"
        android:text="@string/hello" android:textColor="@android:color/white"
        android:textSize="100sp" />

    <ImageView android:id="@+id/imageView1" android:layout_width="100dp"
        android:layout_height="100dp" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:layout_marginBottom="50dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
