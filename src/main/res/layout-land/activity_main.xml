<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent"

    android:layout_height="match_parent" android:orientation="horizontal">

    <ImageView
        android:id="@+id/toggleButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_start_service" />

    <View android:layout_width="3dp" android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <fragment android:id="@+id/settingsFragment"
        android:name="com.RSen.OpenMic.Pheonix.SettingsCardsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_settings_cards" />

</LinearLayout>