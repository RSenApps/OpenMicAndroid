<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:paddingBottom="5dp" android:paddingLeft="15dp"
    android:paddingRight="15dp" android:paddingTop="5dp">

    <TextView android:id="@+id/textView1" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Command Phrase:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText android:id="@+id/commandPhrase" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:ems="10">

        <requestFocus />
    </EditText>

    <TextView android:id="@+id/textView2" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Tasker Command:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner android:id="@+id/commandListButton" android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
